  <!-- Project properties =============================================== -->

  <properties>
    <version.gwt>2.8.2</version.gwt>
    <version.guava>26.0-jre</version.guava>
    <data.directory>/data/duc</data.directory>
    <src.core>src/core/src/main</src.core>
  </properties>

  <!-- External repositories ============================================ -->

  <repositories>
    <repository>
      <id>edu.protege.stanford</id>
      <name>Protege Project Maven Repo</name>
      <url>https://github.com/protegeproject/mvn-repo/raw/master/releases</url>
    </repository>
  </repositories>

  <!-- Environment builds =============================================== -->

  <build>
    <outputDirectory>
      ${project.build.directory}/${project.build.finalName}/WEB-INF/classes
    </outputDirectory>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
      <resource>
        <directory>${src.core}/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

    <plugins>

      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>war</goal>
            </goals>
            <configuration>
              <classifier>${env}</classifier>
              <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
            </configuration>
          </execution>
        </executions>
        <configuration>
           <warSourceDirectory>${src.core}/webapp</warSourceDirectory>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/java</source>
                <source>${src.core}/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>cat.xtec.merli</groupId>
        <artifactId>merli-maven-webprotege</artifactId>
        <version>${revision}</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generatePortletFactory</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <descriptors>
            <descriptor>${src.core}/assembly/webprotege-cli.xml</descriptor>
          </descriptors>
          <archive>
            <manifest>
              <mainClass>
                edu.stanford.bmir.protege.web.server.cmdline.WebProtegeCli
              </mainClass>
            </manifest>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <version>${version.gwt}</version>
        <executions>
          <execution>
            <goals>
              <goal>generateAsync</goal>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <runTarget>WebProtege.jsp</runTarget>
          <servicePattern>cat/xtec/**/*Service.java</servicePattern>
          <extraJvmArgs>-Xms1G -Xmx4G</extraJvmArgs>
          <localWorkers>1</localWorkers>
          <modules>
            <module>module-${env}</module>
          </modules>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
      </plugin>

      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.17</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

    </plugins>
  </build>

